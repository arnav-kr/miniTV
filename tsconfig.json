  "compilerOptions": {
    "rootDir": "./src",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
  },
  "include": [
    "./src/**/*"
  ],
}